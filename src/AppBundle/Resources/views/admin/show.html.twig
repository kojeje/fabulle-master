{% block content %}
    <a id="article-anch" class="anch"></a>

    <article id="show-{{ leShow.Id }}" class="container">

    <div class="article-content row">
        <div class="affiche col-md-3">
            <img src="{{ asset('assets/uploads/' ~ leShow.img1) }}" alt="{{ leShow.imgAlt1 }}" title="{{ leShow.imgTitle1 }}" class="affiche">
        </div>
    <div class="offset-md-1"></div>
    <div class="col-md-8 article-content">
        <h1 class="article-h1 show-h1">{{ leShow.titre }}</h1>
        {% include '@App/admin/partials/admin-shows-icons.html.twig' %}
        <h2 class="article-text article-sub-h2">
            {{ leShow.Genre }}
        </h2>
        <p class="article-text create_date">
            création: {{ leShow.creationdate|date("Y") }}
        </p>
        <p class="article-text article-sub-h2">
            {{ leShow.text1 }}
        </p>
        <a href="#article-anch2">
            <div class="button button2">
                <p>
                    <i class="fas fa-chevron-down"></i>
                </p>
            </div>
        </a>
    </div>
    <div class="v-bloc col-md-12"></div>
    <a id="article-anch2" class="show-content2"></a>
    
        <div class="col-md-6 article-content">
            <h2 class="article-h1 show-h1" id="imagine">
                {{ leShow.sub2 }}
            </h2>
            <div class="article-text">
                {{ leShow.text2  }}
            </div>
            <a href="#article-anch3">
                <div class="button button2">

                    <p><i class="fas fa-chevron-down"></i></p>
                </div>
            </a>

        </div>
    {% if leShow.youtube %}
        <div class="col-md-6 video">
            <div class="video-content">
                {{ leShow.youtube|raw}}
            </div>
        </div>



    {% else %}
        
        <div class="offset-md-1"></div>
        <div class="affiche col-md-3">
            <img src="{{ asset('assets/uploads/'~leShow.Img2) }}" alt="{{ leShow.ImgAlt2 }}" title="{{ leShow.ImgTitle2 }}" class="affiche">
        </div>
        <div class="offset-md-2"></div>
    {% endif %}
    {#<div class="offset-1"></div>#}
    {% if leShow.DispoBoolean == true %}
        <a id="article-anch3"></a>
        <div class="col-md-10 bref">
            <a id="article-anch3" class="anch"></a>
            <h2 class="article-text-h2" id="title-spe">
                {{ leShow.titre }}
            </h2>
            <div class="bref_block">

                <p class="bref-item style">
                    {{ leShow.Genre }}
                </p>
                <p class="bref-item">
                    à partir de {{ leShow.minAge }} ans
                </p>
                <p class="bref-item">
                    jusqu'à {{ leShow.maxAge }} ans
                </p>
                <div class="bref-item">


                </div>


                <p class="bref-item">
                    durée: {{ leShow.duree }} mn
                </p>


                <p class="bref-item">
                    tarif *: {{ leShow.tarif }} €
                </p>
                <p class="mentions">
                    <i>* hors frais de déplacement et conditions particulière</i>
                    <a href="">nous consulter</a>
                </p>
            <div>




                </div>
            </div>
        </div>

        </div>
        </article>

    {% else %}

       {% include '@App/admin/partials/admin-new-shows-loop.html.twig' %}


    {% endif %}
    {% include '@App/admin/partials/admin-events-loop.html.twig' %}








{% endblock %}


