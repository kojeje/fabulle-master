                <div class="field col-12">
                    <p>texte slider 3</p>
                    {{ form_errors(formhome.sl_caption) }}
                    {{ form_widget(formhome.sl_caption, {'attr': {"class":'alt'}}) }}

                </div>
                <hr class="col-11">
            </div>

            <div class="row" id="img-home-5">
                <div class="field col-lg-4 col-12">
                    <p>Image slider</p>

