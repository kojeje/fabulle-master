{% extends "@App/base_admin.html.twig" %}

{% block flash %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}

{% block form %}

    <div class="register container">
        <a id="article-anch" class="anch d-md-none d-lg-block"></a>

        {# ENTETE DU FORMULAIRE #}
        <div class="createUser_logo row">
            <div class="offset-lg-1 d-md-none d-lg-block"></div>
            <div class="statut col-md-12 col-lg-10 row">
                <h2 class="statut_it col-md-6 col-lg-4">{{ app.user.username }} !</h2>
                <div class="offset-md-2 d-md-none d-lg-block"></div>
                <p class="statut_it col-md-6 col-lg-6">
                    <span>Edition page d'accueil ! </span>
                </p>
            </div>
            <div class="offset-lg-1 d-md-block d-lg-none"></div>
        </div>


        {# FORMULAIRE #}
        {#{{ dump(formhome) }}#}
        {{ form_start(formhome, {attr: {novalidate: 'novalidate', class:'formulaire container'}}) }}

        <div class="form_container">
            <h1>Votre spectacle</h1>

            {#CHAMPS#}

            {#CORPS DE LA PAGE#}

            <div class="corps row">

                {# Titre du spectacle #}
                <h2 class="col-md-6 col-lg-3">Le titre</h2>
                <div class="field col-12 ">
                    {{ form_errors(formhome.titre) }}
                    {{ form_widget(formhome.titre, {'attr': {"class":'titre'}}) }}
                </div>
                <hr>
                <div class="offset-lg-1 d-md-none d-lg-block"></div>
                <h2 class="col-md-10 title">Texte principal</h2>
                <div class="offset-lg-1 d-md-none d-lg-block"></div>
                <div class="offset-lg-1 d-md-none d-lg-block"></div>
                <div class="textarea col-md-12">
                    {{ form_errors(formhome.text1) }}
                    {{ form_widget(formhome.text1) }}
                </div>
                <div class="offset-lg-1 d-md-none d-lg-block"></div>

                {# Séparateur#}
                <hr>

                <div id="img1" class="col-12">
                    <div class="field">
                        <p>Image principale</p>
                        {{ form_errors(formhome.img1) }}
                        {{ form_widget(formhome.img1, {'attr': {"class":'img'}}) }}
                    </div>



                    <div class="field">
                        <p>texte alternatif</p>
                        {{ form_errors(formhome.img_alt1) }}
                        {{ form_widget(formhome.img_alt1, {'attr': {"class":'alt'}}) }}

                        <p>infobulle</p>
                        {{ form_errors(formhome.img_title1) }}
                        {{ form_widget(formhome.img_title1, {'attr': {"class":'alt'}}) }}
                    </div>
                    {# Séparateur#}
                    <hr>
                </div>
            </div>
        </div>
        <!--SLIDER-->
        <div class="col-md-4 col-lg-4">
            <label for="sl_boolean">presence d'un slider photo?</label>
            <input type="checkbox" class="case" id="sl_boolean"
                   name="sl_boolean"
                   checked
                   onclick="showHideSlider()">
        </div>
