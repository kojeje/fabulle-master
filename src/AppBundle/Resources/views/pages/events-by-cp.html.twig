{% extends '@App/base.html.twig' %}
{% block content %}
    <a id="article-anch"></a>
    <div class="article-loop row  container-fluid event-list">
        <div class="offset-md3 d-none d-md-block"></div>
        <h2 class="article-h1 h1-event-list col-md-6 col-12">
            <i class="fal fa-calendar"></i>
            Dans votre région
        </h2>
        <div class="offset-md3 d-none d-md-block"></div>
        <section class="row event-line">

            {#collection de lieux#}
        {% if places %}
            {% for place in places %}

{#{{ dump(place) }}#}
                {#collection d'events pour un lieu#}
                {% for element in place.leEvent %}
                    {#{{ dump(element) }}#}

                    {#{% Si la date est a venir %}#}
                    {% if "now"|date >= element.date|date  %}
                        <section class="container event-line">

                            {#lien vers la page de l'évènement#}
                            <a class="row event-home-bloc" href="{{path ('event_id', {'id': element.id}) }}">
                                {# Thumbnail #}
                                <div class="thumb  col-2">
                                    <img src="{{ asset('assets/uploads/'~element.leShow.Img1) }}" alt="{{ element.leShow.ImgAlt1 }}">
                                </div>
                                {# Titre #}
                                <h2 class="article-h3 col-md-3 col-8">{{ element.leShow.Titre }}</h2>
                                {# Date #}

                                <p class="col-md-2 col-6">{{ element.date|date("d/m/Y") }}</p>

                                {# Nom du lieu #}

                                <p class="col-md-2 col-6">{{ place.name }}</p>

                                {# CP Commune#}
                                <p class="col-md-3 col-12">{{ place.Cp }} - {{ place.Commune }}</p>

                            </a>
                        </section>
                        <hr>

                    {% endif %}
                {% endfor %}
            {% endfor %}
        {% else %}
            <h2 class="h1-event-list col-12">
                <i class="flash-icon error fal fa-times"></i>
                Pas de représentation prévue dans cette zone
            </h2>
            <div class="offset-md3 d-none d-md-block"></div>
            <p class="col-6">Retentez votre chance avec un autre cp</p>
        {% endif %}
        </section>





                        {#{% if leShow.get_field('field_5cbc31c7f2c13') == leEvent.get_field('field_5cbc31c7f2c13') %}#}

        <div class="offset-md-7"></div>







    </div>
{% endblock %}