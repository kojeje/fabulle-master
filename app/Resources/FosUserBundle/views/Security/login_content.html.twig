{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" class="login-field" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username" class="login-field-label">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" class="login-field" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

    <label for="password" class="login-field-label">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" class="login-field" name="_password" required="required" autocomplete="current-password" />
<div class="remember">
    <input type="checkbox" id="remember_me" class="case case2" class="login-field" name="_remember_me" value="on" />
    <label for="remember_me" class="case-label">{{ 'security.login.remember_me'|trans }}</label>
</div>
    <input type="submit" id="_submit" class="login-field-submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
